@{
    ViewData["Title"] = "Xác nhận đăng ký";
    Layout = null;
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Makeup Artist Platform - Xác nhận đăng ký">
    <meta name="author" content="">
    <link rel="icon" href="~/favicon.ico">
    <title>Makeup Artist - Xác nhận đăng ký</title>
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="~/css/simplebar.css">
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/css/feather.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/app-light.css" id="lightTheme" disabled>
    <link rel="stylesheet" href="~/css/app-dark.css" id="darkTheme">
    <style>
        .brand-logo {
            max-width: 120px;
            margin-bottom: 2rem;
        }
        .confirmation-container {
            box-shadow: 0 4px 25px rgba(0,0,0,.1);
            border-radius: 0.5rem;
            padding: 2.5rem;
            background-color: #2e3650;
        }
        .email-icon {
            font-size: 48px;
            color: #e91e63;
            margin-bottom: 1rem;
        }
        .btn-primary {
            background-color: #e91e63;
            border-color: #e91e63;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #d81557;
            border-color: #d81557;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(233, 30, 99, 0.4);
        }
        .auth-footer {
            margin-top: 1.5rem;
            font-size: 0.875rem;
        }
    </style>
</head>
<body class="dark">
    <div class="wrapper vh-100">
        <div class="row align-items-center h-100 justify-content-center">
            <div class="col-lg-5 col-md-7 col-10">
                <div class="confirmation-container text-center">
                    <img src="~/assets/images/makeup-logo.png" alt="Makeup Logo" class="brand-logo" onerror="this.src='https://via.placeholder.com/120x60?text=MAKEUP'">
                    <div class="email-icon">
                        <i class="fe fe-mail"></i>
                    </div>
                    <h1 class="h3 mb-3">Xác nhận tài khoản của bạn</h1>
                    
                    @if (!string.IsNullOrEmpty(TempData["warning"] as string))
                    {
                        <div class="alert alert-warning mb-4" role="alert">
                            @TempData["warning"]
                        </div>
                    }
                    
                    <p class="mb-4">Chúng tôi đã gửi email xác nhận đến:</p>
                    <div class="email-address p-3 mb-3 bg-dark rounded">
                        <strong>@ViewBag.Email</strong>
                    </div>
                    <p class="mt-3">Vui lòng kiểm tra hộp thư đến của bạn (và thư mục spam) để xác nhận địa chỉ email của bạn. Sau khi xác nhận, bạn có thể đăng nhập vào tài khoản.</p>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">
                            <i class="fe fe-log-in mr-2"></i>Quay lại trang đăng nhập
                        </a>
                    </div>
                    
                    <div class="mt-3">
                        <p>Không nhận được email? <a href="@Url.Action("ResendEmailConfirmation", "Account")">Gửi lại email xác nhận</a></p>
                    </div>
                    
                    <p class="auth-footer text-muted">© @DateTime.Now.Year Makeup Artist Platform</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Core JS -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
</body>
</html> 