@model Makeup.ViewModels.ResendEmailConfirmationVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Gửi lại email xác nhận";
    Layout = null;
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Makeup Artist Platform - Gửi lại email xác nhận">
    <meta name="author" content="">
    <link rel="icon" href="~/favicon.ico">
    <title>Makeup Artist - Gửi lại email xác nhận</title>
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="~/css/simplebar.css">
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/css/feather.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/app-light.css" id="lightTheme">
    <link rel="stylesheet" href="~/css/app-dark.css" id="darkTheme" disabled>
    <style>
        .brand-logo {
            max-width: 120px;
            margin-bottom: 2rem;
        }
        .auth-container {
            box-shadow: 0 4px 25px rgba(0,0,0,.1);
            border-radius: 0.5rem;
            padding: 2.5rem;
            background-color: #ffffff;
        }
        .btn-primary {
            background-color: #e91e63;
            border-color: #e91e63;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #d81557;
            border-color: #d81557;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(233, 30, 99, 0.4);
        }
        .form-control:focus {
            border-color: #e91e63;
            box-shadow: 0 0 0 0.2rem rgba(233, 30, 99, 0.25);
        }
        .auth-footer {
            margin-top: 1.5rem;
            font-size: 0.875rem;
        }
        .validation-error {
            color: #ff8a80;
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body class="light">
    <div class="wrapper vh-100">
        <div class="row align-items-center h-100 justify-content-center">
            <div class="col-lg-4 col-md-6 col-10">
                <div class="auth-container text-center">
                    <img src="~/assets/images/makeup-logo.png" alt="Makeup Logo" class="brand-logo" onerror="this.src='https://via.placeholder.com/120x60?text=MAKEUP'">
                    <h1 class="h4 mb-4">Gửi lại email xác nhận</h1>
                    
                    @if (!ViewContext.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mb-4" role="alert">
                            <div asp-validation-summary="All" class="text-left"></div>
                        </div>
                    }
                    
                    <form asp-action="ResendEmailConfirmation" asp-controller="Account" method="post" class="text-left">
                        <p class="text-muted mb-4">Nhập địa chỉ email bạn đã sử dụng để đăng ký. Chúng tôi sẽ gửi lại email xác nhận cho bạn.</p>
                        
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" asp-for="Email" id="inputEmail" class="form-control form-control-lg" 
                                   placeholder="Nhập địa chỉ email" required autofocus>
                            <span asp-validation-for="Email" class="validation-error"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                                <i class="fe fe-send mr-2"></i>Gửi lại email xác nhận
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-outline-secondary">
                                <i class="fe fe-arrow-left mr-1"></i>Quay lại trang đăng nhập
                            </a>
                        </div>
                    </form>
                    <p class="auth-footer text-muted">© @DateTime.Now.Year Makeup Artist Platform</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Core JS -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
    
    <!-- Additional JS -->
    <script>
        $(document).ready(function() {
            // Focus email field on load
            $('#inputEmail').focus();
            
            // Auto hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
</body>
</html> 